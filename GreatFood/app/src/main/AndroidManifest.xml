<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dwiputri.greatfood">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CRUD_Survey.TampilSurvey"></activity>
        <activity android:name=".CRUD_Survey.Tambah_survey" />
        <activity
            android:name=".Service.Services"
            android:label="@string/title_activity_services"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Service.HasilSurvey" />
        <activity android:name=".CRUD.TampilData" />
        <activity android:name=".CRUD.Tambah" />
        <activity
            android:name=".WebService.HasilLokasi"
            android:label="@string/title_activity_awal" />
        <activity
            android:name=".WebService.WebServices"
            android:label="@string/title_activity_awal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Fragment.DetailTerbaru" />
        <activity android:name=".Fragment.DetailDiskon" />
        <activity android:name=".Contact" />
        <activity
            android:name=".Awal"
            android:label="@string/title_activity_awal"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SQLite.UsersList"
            android:label="@string/title_activity_awal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SQLite.Register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SQLite.Login"
            android:screenOrientation="portrait" />
        <activity android:name=".Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>